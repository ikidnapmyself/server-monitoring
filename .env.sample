# .env.sample
# Copy this file to .env for local development.

# Checkers
CHECKERS_SKIP_ALL=0
CHECKERS_SKIP=

STATSD_PREFIX=pipeline
STATSD_PORT=8125
STATSD_HOST=localhost
# Optional StatsD (only used when ORCHESTRATION_METRICS_BACKEND=statsd)

ORCHESTRATION_METRICS_BACKEND=logging
ORCHESTRATION_INTELLIGENCE_FALLBACK_ENABLED=1
ORCHESTRATION_BACKOFF_FACTOR=2.0
ORCHESTRATION_MAX_RETRIES_PER_STAGE=3
# Orchestration

CELERY_TASK_ALWAYS_EAGER=0
# CELERY_RESULT_BACKEND=redis://localhost:6379/0
# For local dev we default to cache+memory:// in settings; uncomment if you want Redis results
CELERY_BROKER_URL=redis://localhost:6379/0
# Celery / Redis

DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1
DJANGO_DEBUG=1
DJANGO_ENV=dev
# Basic Django

# Django / MySQL (default)
DJANGO_DB_ENGINE=django.db.backends.mysql
DJANGO_DB_NAME=pipeline
DJANGO_DB_USER=pipeline
DJANGO_DB_PASSWORD=pipeline
DJANGO_DB_HOST=127.0.0.1
DJANGO_DB_PORT=3306
DJANGO_DB_OPTIONS=
# Example DJANGO_DB_OPTIONS (JSON-ish string your settings can parse if you support it):
# DJANGO_DB_OPTIONS={"charset":"utf8mb4","init_command":"SET sql_mode='STRICT_TRANS_TABLES'"}

# Alternative: SQLite (uncomment to use)
# DJANGO_DB_ENGINE=django.db.backends.sqlite3
# DJANGO_DB_NAME=./db.sqlite3
# DJANGO_DB_USER=
# DJANGO_DB_PASSWORD=
# DJANGO_DB_HOST=
# DJANGO_DB_PORT=
# DJANGO_DB_OPTIONS=

# NOTE: Do not put secrets in repo-tracked files.
# Set DJANGO_SECRET_KEY in your local `.env` (created by the installer) or shell env.
# NEVER commit real secrets.
